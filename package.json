{
  "name": "smart-slack-bot",
  "version": "1.0.0",
  "description": "Production-ready Slack bot with Azure AD integration and LLM-powered responses",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:load": "artillery run tests/load/load-test.yml",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "node src/database/seed.js",
    "db:studio": "prisma studio",
    "build": "docker build -t smart-slack-bot .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:prod": "npm run build && npm run docker:up"
  },
  "keywords": [
    "slack",
    "bot",
    "azure-ad",
    "openai",
    "llm",
    "webhook",
    "api",
    "production"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "@prisma/client": "^5.7.0",
    "@slack/bolt": "^3.17.0",
    "@slack/web-api": "^6.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "redis": "^4.6.10",
    "bull": "^4.12.0",
    "openai": "^4.20.1",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "prom-client": "^15.0.0",
    "express-prometheus-middleware": "^1.2.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "artillery": "^2.0.0",
    "faker": "^6.6.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/smart-slack-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/smart-slack-bot/issues"
  },
  "homepage": "https://github.com/yourusername/smart-slack-bot#readme"
} 